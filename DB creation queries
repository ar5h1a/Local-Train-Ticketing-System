CREATE TABLE trains (
    train_id BIGSERIAL PRIMARY KEY,
    name VARCHAR(255),
    line VARCHAR(255),
    stations TEXT,
    frequency INTEGER,
    first_departure VARCHAR(20),
    last_departure VARCHAR(20)
);

